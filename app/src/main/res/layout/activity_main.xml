<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/main_framelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_ee"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <com.bing.box.view.MainBottomMenu
            android:id="@+id/main_menu1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:img_default="@mipmap/ic_menu1_0"
            app:img_selected="@mipmap/ic_menu1"
            app:textColor="@color/black"
            app:text="主页"
            app:tipSize="99"/>
        <com.bing.box.view.MainBottomMenu
            android:id="@+id/main_menu2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:img_default="@mipmap/ic_menu2_0"
            app:img_selected="@mipmap/ic_menu2"
            app:textColor="@color/black"
            app:text="组件库"
            app:tipSize="99"/>
        <com.bing.box.view.MainBottomMenu
            android:id="@+id/main_menu3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:img_default="@mipmap/ic_menu3_0"
            app:img_selected="@mipmap/ic_menu3"
            app:textColor="@color/black"
            app:text="空间"
            app:textSize="48"
            app:tipSize="99"/>
        <com.bing.box.view.MainBottomMenu
            android:id="@+id/main_menu4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:img_default="@mipmap/ic_menu4_0"
            app:img_selected="@mipmap/ic_menu4"
            app:textColor="@color/black"
            app:text="我的"
            app:textSize="48"
            app:tipSize="99"/>
    </LinearLayout>


</LinearLayout>